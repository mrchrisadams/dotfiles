# alias migrate='rake db:migrate db:test:clone'
alias rst='touch tmp/restart.txt'

# commands starting with % for pasting from web
# alias %=' '

### Functions

# changing directory to code project
function c { cd ~/Code/$1; }

# make a blog post in markdown
# this should be turned into a proper ruby script, with titles, dates and such like
function blog-post {
	mate $(date "+%Y-%m-%d")-$1.markdown;
}

# jump to m1y wiki
function mw {
  cd ~/Dropbox/mywiki
}

# search my wiki for notes
function mws {
  cd ~/Dropbox/mywiki
  ack $1
}

alias today="date '+%Y-%m-%d'"